<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultBlackTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="BaseAppTheme" parent="DefaultBlackTheme" />

    <style name="LaunchIconTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@drawable/launch_night_icon</item>
    </style>

    <style name="NormalTheme" parent="BaseAppTheme" />
</resources>