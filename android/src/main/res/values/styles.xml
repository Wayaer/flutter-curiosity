<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    固定背景色    -->
    <style name="LaunchThemeFullscreenWhiteIcon" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/launch_white_icon</item>
    </style>

    <style name="LaunchThemeFullscreenWhite" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="LaunchThemeFullscreenBlackIcon" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/launch_black_icon</item>
    </style>

    <style name="LaunchThemeFullscreenBlack" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!--    自己适应背景色    -->
    <style name="LaunchThemeFullscreenIcon" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/launch_white_icon</item>
    </style>

    <style name="LaunchThemeFullscreen" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
